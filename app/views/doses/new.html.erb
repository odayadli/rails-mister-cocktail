<div class="container">
  <h1>New dose for <%= @cocktail.name %></h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.order(:name), prompt: "Choose an ingredient" %>
    <%= f.submit "Add an ingredient", class: "btn btn-primary mt-2" %>
  <% end %>
</div>