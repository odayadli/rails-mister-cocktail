<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="8000">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <p class="auto_type">
        <span id="banner-typed-text"></span>
      </p>
      <img src="/assets/home_3.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/assets/home_2.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/assets/home_1.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>




<div class="album text-muted">
  <div class="container">
    <div class="row-index row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-sm-12 col-md-4 ">
          <div class="card-index">
          <%= cl_image_tag cocktail.photo.key, height: 315, width: 350, crop: :fill %>
          <div>
            <strong class="card-text_index" style="font-family: 'Londrina Solid', cursive; color: #0E0000 "><%= link_to cocktail.name, cocktail_path(cocktail) %></strong>
            <!--          <a href="<%#= product_path(product) %>"><%#= image_tag("picture_holder")%><a>-->
            <p><%= cocktail.description %></p>
            <div class="card-foot">
              <div class="foot edit"><i class="fas fa-edit"><%= link_to "Edit me", edit_cocktail_path(cocktail) %></i>
              </div>
            </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-12">
      </div>
    </div>
  </div>
</div>