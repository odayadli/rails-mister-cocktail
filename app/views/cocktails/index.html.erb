<body class="cocktail_page">

<div class="row">
  <div class="col">
    <% if @query %>
      <p>You searched for <strong><%= @query %></strong>. We found <%= @cocktails.count %> flats out of
        our <%= Cocktail.count %> on our website.</p>
    <% else %>
      <p>All <%= Cocktail.count %> Cocktails.</p>
    <% end %>
  </div>
</div>

<h1>List of cocktails</h1>
<div>
  <%= link_to "Add a new cocktail", new_cocktail_path, type: "button", class: "btn btn-primary mt-2" %>
</div>


<div class="album text-muted">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="card">
          <img src="/assets/drink_3.jpg" class="card-image-index" alt="...">
          <%#= image_tag("picture_holder")%>
          <strong class="card-text"><%= cocktail.name %></strong>
          <!--          <a href="<%#= product_path(product) %>"><%#= image_tag("picture_holder")%><a>-->
          <p><%= cocktail.description %></p>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-12">
      </div>
    </div>
  </div>
</div>


